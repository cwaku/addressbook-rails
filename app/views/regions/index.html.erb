<p style="color: green"><%= notice %></p>

<% if @regions.empty? %>
  <p>No records found</p>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Region Name</th>
        <th scope="col">Remarks</th>
        <th scope="col">Creator</th>
      </tr>
      </thead>
      <tbody>
        <% @regions.each do | region| %>
          <tr>
            <td><%= region.id %></td>
            <td><%= region.name %></td>
            <td><%= region.remarks %></td>
            <td><%= region.user.user_role.role_code %></td>
            <td>
              <% if can? :read, region %>
                <%= link_to raw("<i class=\"bi bi-eye\"></i>"), region_path(region) %>
              <% end %>
              <% if can? :update, region %>
                <%= link_to raw("<i class=\"bi bi-pencil\"></i>"), edit_region_path(region) %>
              <% end %>
              <% if can? :destroy, region %>
                <%= link_to raw("<i class=\"bi bi-trash\"></i>"), region_path(region), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
