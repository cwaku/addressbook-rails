<p style="color: green"><%= notice %></p>

<% if @roles.empty? %>
  <p>No records found</p>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>  
        <th scope="col">Role Code</th>
        <th scope="col">Role Name</th>
        <th scope="col">Active Status</th>
        <th scope="col">Delete Status</th>
      </tr>
      </thead>
      <tbody>
        <% @roles.each do | role| %>
          <tr>
            <td><%= role.id %></td>
            <td><%= role.unique_code %></td>
            <td><%= role.name %></td>
            <td><%= role.active_status %></td>
            <td><%= role.del_status %></td>
            <td>
              <% if can? :read, role %>
                <%= link_to raw("<i class=\"bi bi-eye\"></i>"), role_path(role) %>
              <% end %>
              <% if can? :update, role %>
                <%= link_to raw("<i class=\"bi bi-pencil\"></i>"), edit_role_path(role) %>
              <% end %>
              <% if can? :destroy, role %>
                <%= link_to raw("<i class=\"bi bi-trash\"></i>"), role_path(role), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
