<%= content_tag :tr do %>

<%# put index here %>
  <td><%= index %>.</td>
  <td><%= contact.firstname %></td>
  <td><%= contact.lastname %></td>
  <td><%= contact.phone %></td>
  <td><%= contact.suburb.city.region.name %></td>
  <td><%= contact.suburb.city.name %></td>
  <td><%= contact.suburb.name %></td>
  <td><%= contact.remarks %></td>
  <td class="table-td">
    <% if can? :update, contact %>
      <%= link_to raw("<i class=\"bi bi-pencil\"></i>"), edit_contact_path(contact), class: "btn btn-secondary" %>
    <% end %>
    <% if can? :destroy, contact %>
      <%= button_to raw("<i class=\"bi bi-trash\"></i>"), contact_path(contact), class: "btn btn-danger delete-contact-btn", method: :delete, data: { turbo_method: "delete", turbo_confirm: "Are you sure you want to delete this contact?" } %>
    <% end %>
  </td>
<% end %>
