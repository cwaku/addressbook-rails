<p style="color: green"><%= notice %></p>

<%# Create tabble to hold all contacts with pagination %>
<% if @contacts.empty? %>
  <p>No records found</p>
<% else %>
  <div id="contacts">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Phone</th>
          <th scope="col">Region</th>
          <th scope="col">City</th>
          <th scope="col">Suburb</th>
          <th scope="col">Remarks</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.id %></td>
            <td><%= contact.firstname %></td>
            <td><%= contact.lastname %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.suburb.city.region.name %></td>
            <td><%= contact.suburb.city.name %></td>
            <td><%= contact.suburb.name %></td>
            <td><%= contact.remarks %></td>
            <td>
              <% if can? :read, contact %>
                <%= link_to raw("<i class=\"bi bi-eye\"></i>"), contact_path(contact) %>
              <% end %>
              <% if can? :update, contact %>
                <%= link_to raw("<i class=\"bi bi-pencil\"></i>"), edit_contact_path(contact) %>
              <% end %>
              <% if can? :destroy, contact %>
                <%= link_to raw("<i class=\"bi bi-trash\"></i>"), contact_path(contact), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
<% end %>


