<p style="color: green"><%= notice %></p>

<% if @cities.empty? %>
  <p>No records found</p>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">City Name</th>
        <th scope="col">Region</th>
        <th scope="col">Remarks</th>
        <th scope="col">Creator</th>
      </tr>
      </thead>
      <tbody>
        <% @cities.each do | city| %>
          <tr>
            <td><%= city.id %></td>
            <td><%= city.name %></td>
            <td><%= city.region.name %></td>
            <td><%= city.remarks %></td>
            <td><%= city.user.user_role.role_code %></td>
            <td>
              <% if can? :read, city %>
                <%= link_to raw("<i class=\"bi bi-eye\"></i>"), city_path(city) %>
              <% end %>
              <% if can? :update, city %>
                <%= link_to raw("<i class=\"bi bi-pencil\"></i>"), edit_city_path(city) %>
              <% end %>
              <% if can? :destroy, city %>
                <%= link_to raw("<i class=\"bi bi-trash\"></i>"), city_path(city), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>